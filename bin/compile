#!/usr/bin/env bash
indent() {
    sed -u 's/^/      /'
}

BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"
STAGE="$(mktemp -d)"

if [ ! -f "${ENV_DIR}/REACT_APP_APP" ]; then
    echo "REACT_APP_APP was not set. Aborting" | indent
    exit 1
fi
REACT_APP_APP="$(cat "${ENV_DIR}/REACT_APP_APP")"

(
    mv "${BUILD_DIR}/${REACT_APP_APP}" "${STAGE}" &&
    mv "${BUILD_DIR}/core" "${STAGE}" &&
    rm -rf "${BUILD_DIR}" &&
    mv "${STAGE}/$(basename "$REACT_APP_APP")" "${BUILD_DIR}"
    mv "${STAGE}/core" "${BUILD_DIR}/.."
)

echo "1"
ls "${BUILD_DIR}"
echo "2"
ls .
echo "3"
ls ./..
echo "4"
ls "${BUILD_DIR}/.."
echo "5"

if [ $? -ne 0 ]; then
    echo "FAILED to copy directory into place" | indent
    exit 1
fi

echo "Copied ${REACT_APP_APP} to root of app successfully" | indent
